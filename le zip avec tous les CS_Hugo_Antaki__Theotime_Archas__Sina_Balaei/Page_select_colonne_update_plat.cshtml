@page
@model PSI_application_C__web.Pages.Page_select_colonne_update_platModel
@{
    ViewData["Title"] = "Sélectionner une Propriété du Plat";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_application_C__web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #343a40;
            color: white;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header .btn {
                background-color: #007bff;
                color: white;
                padding: 10px 20px;
                text-decoration: none;
                border-radius: 5px;
            }

                header .btn:hover {
                    background-color: #0056b3;
                }

        main {
            background-color: white;
            margin: 20px auto;
            padding: 20px;
            border-radius: 8px;
            max-width: 600px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #343a40;
            text-align: center;
            font-size: 24px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

            form div {
                display: flex;
                align-items: center;
                gap: 10px;
            }

            form label {
                font-size: 16px;
                color: #333;
            }

        input[type="radio"] {
            transform: scale(1.2);
        }

        button {
            background-color: #28a745;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #218838;
            }

        p {
            color: red;
            font-size: 14px;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 10px;
            text-align: center;
            margin-top: 40px;
        }

            footer a {
                color: white;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <div>
            <a asp-page="/Page_accueil_connecte" class="btn">Accueil</a>
        </div>
        <div>
            <a asp-page="/Page_1er_chargement" class="btn">Déconnexion</a>
        </div>
    </header>

    <main>
        <h1>Sélectionner une propriété du plat à afficher :</h1>
        <form method="post">
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Nom_plat" />
                    Nom du plat
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Type_Plat" />
                    Type de plat
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Pr_cmb_de_personnes_Plat" />
                    Nombre de personnes
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Prix_par_portion_Plat" />
                    Prix par portion
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Nbre_portion_dispo_plat" />
                    Nombre de portions disponibles
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Date_fabrication_plat" />
                    Date de fabrication
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Date_péremption_plat" />
                    Date de péremption
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Nationalité_cuisine_Plat" />
                    Nationalité de la cuisine
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Régime_alimentaire_Plat" />
                    Régime alimentaire
                </label>
            </div>
            <div>
                <label>
                    <input type="radio" name="Option_choisie" value="Ingrédients_principaux_Plat" />
                    Ingrédients principaux
                </label>
            </div>
            <p>@ViewData["Erreur_selection"]</p>
            <button type="submit">Soumettre la sélection</button>
        </form>
    </main>

    <footer>
        <div>
            &copy; 2025 - Application - <a asp-page="/Privacy">Confidentialité</a>
        </div>
    </footer>
</body>
</html>
