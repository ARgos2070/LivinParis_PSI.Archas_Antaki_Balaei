@page
@model PSI_application_C__web.Pages.Page_commentairesModel
@{
    ViewData["Title"] = "Page commentaire";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_application_C__web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #007bff;
            --primary-dark: #0056b3;
            --background-color: #f8f9fa;
            --text-color: #333;
            --header-bg: #0069d9;
            --footer-bg: #212529;
            --accent-color: #17a2b8;
            --sky-blue: #87CEEB; /* bleu ciel */
            --table-bg: #ffffff;
            --table-border: #ccc;
            --card-shadow: rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--sky-blue); /* Bleu ciel */
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: var(--text-color);
        }

        header {
            background-color: var(--header-bg);
            width: 100%;
            padding: 20px 0;
            text-align: center;
            color: white;
            font-size: 24px;
        }

        main {
            text-align: center;
            padding: 40px 20px;
            max-width: 1000px;
            width: 100%;
        }

        h1 {
            font-size: 32px;
            margin-bottom: 20px;
        }

        .comments-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .comment-card {
            background-color: var(--table-bg);
            border-radius: 10px;
            box-shadow: 0 4px 8px var(--card-shadow);
            padding: 20px;
            width: 100%;
            max-width: 800px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid var(--table-border);
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f4f4f4;
        }

        footer {
            background-color: var(--footer-bg);
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 14px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

            footer a {
                color: var(--accent-color);
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <h1>Commentaires</h1>
    </header>

    <main>
        <h1>Voici vos Statistiques :</h1>

        <div class="comments-container">
            @foreach (var Commentaire in Model.Commentaires)
            {
                <div class="comment-card">
                    <table>
                        <tr>
                            <th>Nom</th>
                            <td>@Commentaire.Nom</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>@Commentaire.Prenom</td>
                        </tr>
                        <tr>
                            <th>Plat du jour</th>
                            <td>@Commentaire.Note_Commentaire</td>
                        </tr>
                        <tr>
                            <th>Nombre de commandes cuisinées</th>
                            <td>@Commentaire.Texte_Commentaire</td>
                        </tr>
                    </table>
                </div>
            }
        </div>
    </main>

    <footer>
        <div>
            &copy; 2025 - PSI_application_C__web - <a asp-page="/Privacy">Confidentialité</a>
        </div>
    </footer>
</body>
</html>
