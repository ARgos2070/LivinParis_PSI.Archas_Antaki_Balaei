@page
@model PSI_application_C__web.Pages.Page_commanderModel
@{
    ViewData["Title"] = "Page commander";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_application_C__web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #007bff;
            --primary-dark: #0056b3;
            --background-color: #f8f9fa;
            --text-color: #333;
            --header-bg: #0069d9;
            --footer-bg: #212529;
            --accent-color: #17a2b8;
            --sky-blue: #87CEEB; /* bleu ciel */
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--sky-blue); /* Arrière-plan bleu ciel */
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: var(--text-color);
        }

        header {
            background-color: var(--header-bg);
            width: 100%;
            padding: 20px 0;
            text-align: center;
            color: white;
            font-size: 24px;
        }

        main {
            text-align: center;
            padding: 40px 20px;
        }

        h1 {
            font-size: 32px;
            margin-bottom: 20px;
        }

        form {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 80%;
            max-width: 600px;
        }

        p {
            font-size: 18px;
            font-weight: 500;
            margin: 20px 0;
        }

        label {
            display: block;
            font-size: 16px;
            margin: 10px 0;
        }

        input[type="radio"] {
            margin-right: 10px;
        }

        button {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 15px 30px;
            margin-top: 20px;
            font-size: 18px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            button:hover {
                background-color: var(--primary-dark);
                transform: scale(1.05);
            }

        footer {
            background-color: var(--footer-bg);
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 14px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

            footer a {
                color: var(--accent-color);
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <h1>Commander un plat</h1>
    </header>

    <main>
        <h1>Bienvenue dans la carte des plats :</h1>
        <form method="post">
            <div>
                <p>Comment voulez-vous afficher les plats ?</p>
                <label>
                    <input type="radio" name="Option_choisie" value="Afficher_tout" />
                    Afficher tout
                </label>
                <label>
                    <input type="radio" name="Option_choisie" value="afficher_par_nationalite" />
                    Afficher par nationalité
                </label><br>
                <label>
                    <input type="radio" name="Option_choisie" value="afficher_par_regime_alimentaire" />
                    Afficher par régime alimentaire
                </label><br>
                <label>
                    <input type="radio" name="Option_choisie" value="afficher_par_prix_croissant" />
                    Afficher par prix croissant
                </label><br>
                <label>
                    <input type="radio" name="Option_choisie" value="afficher_par_prix_decroissant" />
                    Afficher par prix décroissant
                </label>
            </div>
            <p>@ViewData["Erreur_affichage"]</p>
            <button type="submit">Soumettre le choix</button>
        </form>
    </main>

    <footer>
        <div>
            &copy; 2025 - PSI_application_C__web - <a asp-page="/Privacy">Confidentialité</a>
        </div>
    </footer>
</body>
</html>
