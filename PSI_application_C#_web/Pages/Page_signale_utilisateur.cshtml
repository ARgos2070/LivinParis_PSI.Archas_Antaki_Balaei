@page
@model PSI_application_C__web.Pages.Page_signale_utilisateurModel
@{
    ViewData["Title"] = "Signalez un l'utilisateur";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_application_C__web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- <link rel="stylesheet" href="~/PSI_application_C__web.styles.css" asp-append-version="true" /> -->
</head>
<body>
    <header>
        <div>
            <a asp-page="/Page_accueil_connecte" class="btn">Accueil</a>
        </div>
        <div>
            <a asp-page="/Page_1er_chargement" class="btn">Déconnexion</a>
        </div>
    </header>

    <div>
        <h1>Pleinte :</h1>
        <form method="post">
            <small>La différence entre majuscule et minuscule n'a pas à être prise en compte dans l'identifiant</small>
            <div>
                <label asp-for="nom_utilisateur_signale">Pseudo (id utilisateur) :</label>
                <input type="text" asp-for="nom_utilisateur_signale" maxlength="50" />
                <p>@ViewData["Erreur_id_utilisateur_aucune_saisie"]</p>
                <p>@ViewData["Erreur_id_utilisateur_incorrect"]</p>
            </div>
            <div>
                <label asp-for="plainte">Plainte :</label>
                <input type="text" asp-for="plainte" maxlength="50" />
                <p>@ViewData["Erreur_pleinte_saisie"]</p>
            </div>

            <button type="submit">Soumettre le choix</button>
        </form>
    </div>

    <footer>
        <div>
            &copy; 2025 - PSI_application_C__web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
