@page
@model PSI_application_C__web.Pages.Page_mon_profileModel
@{
    ViewData["Title"] = "Afficher le profil de l'utilisateur";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_application_C__web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div>
            <a asp-page="/Page_accueil_connecte" class="btn">Accueil</a>
        </div>
        <div>
            <a asp-page="/Page_1er_chargement" class="btn">Déconnexion</a>
        </div>
    </header>

    <main>
        <h1>Voici vos Statistiques</h1>

        <h2>Bonjour @Model.StatUtilisateur[0]</h2>

        <div>
            <h4>Voici vos informations :</h4>
            Mot de passe : @Model.StatUtilisateur[1]<br />
            Prénom :  @Model.StatUtilisateur[3]<br />
            Nom : @Model.StatUtilisateur[2]<br />
            Adresse : @Model.StatUtilisateur[4]<br />
            Numéro de téléphone : @Model.StatUtilisateur[5]<br />
            Adresse mail : @Model.StatUtilisateur[6]<br />
            Nombre de signalement : @Model.StatUtilisateur[9]<br />
            @if (Model.StatUtilisateur[7] == "true")
            {
                <p>Est une entreprise: @Model.StatUtilisateur[7]</p>
                <p>Nombre de signalement: @Model.StatUtilisateur[8]</p>
            }

            
            <button type="button" onclick="window.location.href='/Page_select_colonne_update_utilisateur'">
                Modifier mon profil
            </button>
            <button type="button" onclick="window.location.href='/Page_accueil_connecte'">
                Ne pas modifier mon profil et retourner à la page d'accueil
            </button>
        </div>


    </main>

    <footer style="text-align: center; margin-top: 40px;">
        &copy; 2025 - Application - <a asp-page="/Privacy">Confidentialité</a>
    </footer>
</body>
</html>
