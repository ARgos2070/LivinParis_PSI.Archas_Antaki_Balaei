@page
@model PSI_application_C__web.Pages.Page_creation_platModel
@{
    ViewData["Title"] = "Page création plat";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_application_C__web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #343a40;
            color: #fff;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header .btn {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

        header .btn:hover {
            background-color: #0056b3;
        }

        .container {
            background-color: #fff;
            margin: 20px auto;
            padding: 20px;
            border-radius: 8px;
            max-width: 800px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 24px;
            color: #343a40;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        form div {
            margin-bottom: 15px;
        }

        form label {
            font-size: 16px;
            margin-bottom: 5px;
            color: #343a40;
        }

        form input[type="text"],
        form input[type="password"],
        form input[type="radio"] {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
        }

        form button {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
        }

        form button:hover {
            background-color: #218838;
        }

        form small {
            font-size: 12px;
            color: #666;
        }

        p {
            font-size: 14px;
            color: red;
        }

        footer {
            background-color: #343a40;
            color: #fff;
            padding: 10px;
            text-align: center;
            margin-top: 40px;
        }

        footer a {
            color: #fff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

    </style>
</head>
<body>
    <header>
        <div>
            <a asp-page="/Page_accueil_connecte" class="btn">Accueil</a>
        </div>
        <div>
            <a asp-page="/Page_1er_chargement" class="btn">Déconnexion</a>
        </div>
    </header>

    <div class="container">
        <h1>Création de votre plat</h1>
        <form method="post">
            <!-- Nom du plat -->
            <div>
                <label asp-for="saisie_nom_plat">Nom du plat :</label>
                <input type="text" asp-for="saisie_nom_plat" maxlength="50" />
                <p>@ViewData["Erreur_nom_plat"]</p>
            </div>

            <!-- Type du plat -->
            <div>
                <label asp-for="saisie_type_plat">Type du plat :</label>
                <input type="text" asp-for="saisie_type_plat" maxlength="50" />
                <p>@ViewData["Erreur_type_plat"]</p>
            </div>

            <!-- Nombre de personnes -->
            <div>
                <label asp-for="saisie_pr_cmb_de_personnes_plat">Nombre de personnes :</label>
                <input type="text" asp-for="saisie_pr_cmb_de_personnes_plat" maxlength="8" pattern="\d" required />
                <p>@ViewData["Erreur_pr_cmb_de_personnes_plat"]</p>
            </div>

            <!-- Prix par portion -->
            <div>
                <label asp-for="saisie_prix_par_portion_plat">Prix par personne :</label>
                <input type="text" asp-for="saisie_prix_par_portion_plat" maxlength="8" pattern="^\d+([.]\d{1,2})?$" required />
                <p>@ViewData["Erreur_prix_par_perso_plat"]</p>
            </div>

            <!-- Nombre de portions disponibles -->
            <div>
                <label asp-for="saisie_nbre_portion_dispo_plat">Nombre de portions disponibles :</label>
                <input type="text" asp-for="saisie_nbre_portion_dispo_plat" maxlength="8" pattern="\d" required />
                <p>@ViewData["Erreur_nbre_portion_dispo_plat"]</p>
            </div>

            <!-- Date de fabrication -->
            <p>Date de fabrication :</p>
            <div>
                <label asp-for="saisie_date_fabrication_plat_jour">Jour :</label>
                <input type="text" asp-for="saisie_date_fabrication_plat_jour" maxlength="2" pattern="\d{1,2}" required />
            </div>

            <div>
                <label asp-for="saisie_date_fabrication_plat_mois">Mois :</label>
                <input type="text" asp-for="saisie_date_fabrication_plat_mois" maxlength="2" pattern="\d{1,2}" required />
            </div>

            <div>
                <label asp-for="saisie_date_fabrication_plat_annee">Année :</label>
                <input type="text" asp-for="saisie_date_fabrication_plat_annee" maxlength="4" pattern="\d{4}" required />
                <p>@ViewData["Erreur_date_fabrication_plat"]</p>
            </div>

            <!-- Date de péremption -->
            <p>Date de péremption :</p>
            <div>
                <label asp-for="saisie_date_peremption_plat_jour">Jour :</label>
                <input type="text" asp-for="saisie_date_peremption_plat_jour" maxlength="2" pattern="\d{1,2}" required />
            </div>

            <div>
                <label asp-for="saisie_date_peremption_plat_mois">Mois :</label>
                <input type="text" asp-for="saisie_date_peremption_plat_mois" maxlength="2" pattern="\d{1,2}" required />
            </div>

            <div>
                <label asp-for="saisie_date_peremption_plat_annee">Année :</label>
                <input type="text" asp-for="saisie_date_peremption_plat_annee" maxlength="4" pattern="\d{4}" required />
                <p>@ViewData["Erreur_date_peremption_plat"]</p>
                <p>@ViewData["Erreur_ordre_date"]</p>
            </div>

            <!-- Nationalité du plat -->
            <div>
                <label asp-for="saisie_nationalite_plat">Nationalité du plat :</label>
                <input type="text" asp-for="saisie_nationalite_plat" maxlength="50" />
                <p>@ViewData["Erreur_nationalite_plat"]</p>
            </div>

            <!-- Régime alimentaire -->
            <small>(Si vous voulez que chaque ingrédient soit correctement considéré, veuillez les séparer par une virgule)</small>
            <div>
                <label asp-for="saisie_regime_alimentaire_plat">Régime alimentaire :</label>
                <input type="text" asp-for="saisie_regime_alimentaire_plat" maxlength="255" />
                <p>@ViewData["Erreur_regime_alimentaire_plat"]</p>
            </div>

            <!-- Ingrédients principaux -->
            <div>
                <label asp-for="saisie_ingredients_principaux_plat">Ingrédients principaux :</label>
                <input type="text" asp-for="saisie_ingredients_principaux_plat" maxlength="255" />
                <p>@ViewData["Erreur_ingredients_principaux_plat"]</p>
            </div>

            <!-- Plat du jour -->
            <div>
                <p>Voulez-vous faire de ce plat votre plat du jour ? (S'il s'agit de votre premier plat créé, il sera automatiquement fait plat du jour)</p>
                <label>
                    <input type="radio" asp-for="saisie_choix_plat_du_jour" value="true" />
                    Oui
                </label>
                <label>
                    <input type="radio" asp-for="saisie_choix_plat_du_jour" value="false" />
                    Non
                </label>
            </div>

            <!-- Submit button -->
            <button type="submit">Soumettre le choix</button>
        </form>
    </div>

    <footer>
        <div>
            &copy; 2025 - PSI_application_C__web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
