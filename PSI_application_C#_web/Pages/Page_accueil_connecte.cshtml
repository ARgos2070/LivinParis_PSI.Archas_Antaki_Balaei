@page
@model PSI_application_C__web.Pages.Page_accueil_connecteModel
@{
    ViewData["Title"] = "Page accueil connecte";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_application_C__web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div>
            <a asp-page="/Page_accueil_connecte" class="btn">Accueil</a>
        </div>
        <div>
            <a asp-page="/Page_1er_chargement" class="btn">Déconnexion</a>
        </div>
    </header>

    <main>
        <h1>Bienvenue sur votre accueil</h1>
        <div>
            <button type="button" onclick="window.location.href='/Page_mon_profile'">
                Voir profil ou modifier
            </button>
            <button type="button" onclick="window.location.href='/Page_statistiques'">
                Voir les statistiques
            </button>
            <button type="button" onclick="window.location.href='/Page_signale_utilisateur'">
                Signalez un Utilisateur
            </button>
            <button type="button" onclick="window.location.href='/Page_commentaires'">
                Voir les Commentaires
            </button>
        </div>

        @if (Model.Est_cuisinier)
        {
            <p>Comme vous êtes cuisinier, voici vos fonctionnalités :</p>
            <div>
                <button type="button" onclick="window.location.href='/Page_creation_plat'">
                    Ajouter un plat
                </button>
                <button type="button" onclick="window.location.href='/Page_carte_cuisinier'">
                    Voir ma carte de cuisinier
                </button>
            </div>
        }

        @if (Model.Est_client)
        {
            <p>Comme vous êtes client, voici vos fonctionnalités :</p>
            <div>
                <button type="button" onclick="window.location.href='/Page_commander'">
                    Voir les plats et commander
                </button>
                <button type="button" onclick="window.location.href='/Page_historique_commandes_client'">
                    Voir l'historique de mes plats commandés
                </button>
            </div>
        }

        @if (Model.Est_livreur)
        {
            <p>Comme vous êtes livreur, voici vos fonctionnalités :</p>
            <div>
                <button type="button" onclick="window.location.href='/Page_historique_livraisons'">
                    Voir historique de mes livraisons
                </button>
                <button type="button" onclick="window.location.href='/Page_prise_livraison'">
                    Prendre une livraison
                </button>
            </div>
        }
    </main>

    <footer style="text-align: center; margin-top: 40px;">
        &copy; 2025 - Application - <a asp-page="/Privacy">Privacy</a>
    </footer>
</body>
</html>
