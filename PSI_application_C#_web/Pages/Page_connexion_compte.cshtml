@page
@model PSI_application_C__web.Pages.Page_connexion_compteModel
@{
    ViewData["Title"] = "Page connexion compte";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_application_C__web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- <link rel="stylesheet" href="~/PSI_application_C__web.styles.css" asp-append-version="true" /> -->
</head>
<body>
    <header>
    </header>

    <div>
        <h1>Connexion :</h1>
        <form method="post">
            <small>La différence entre majuscule et minuscule n'a pas à être prise en compte dans l'identifiant</small>
            <div>
                <label asp-for="saisie_id_connexion">Pseudo (id utilisateur) :</label>
                <input type="text" asp-for="saisie_id_connexion" maxlength="50" />
                <p>@ViewData["Erreur_id_utilisateur_aucune_saisie"]</p>
                <p>@ViewData["Erreur_id_utilisateur_incorrect"]</p>
            </div>
            <div>
                <label asp-for="saisie_mot_de_passe_connexion">Mot de passe :</label>
                <input type="text" asp-for="saisie_mot_de_passe_connexion" maxlength="50" />
                <p>@ViewData["Erreur_mot_de_passe_aucune_saisie"]</p>
                <p>@ViewData["Erreur_mot_de_passe_incorrect"]</p>
            </div>

            <button type="submit">Soumettre le choix</button>
        </form>
    </div>

    <footer>
        <div>
            &copy; 2025 - PSI_application_C__web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
